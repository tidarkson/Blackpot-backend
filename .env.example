# Database Configuration for BlackPot Backend
# Copy this file to .env and fill in your actual database URL

# PostgreSQL Database Connection
# Format: postgresql://[user[:password]@][netloc][:port][/dbname][?param1=value1&...]
DATABASE_URL="postgresql://blackpot_user:your_secure_password@localhost:5432/blackpot_dev"

# Node Environment
NODE_ENV="development"

# Server Configuration
PORT=3000
HOST="localhost"

# JWT/Auth Configuration (will be used later)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRY="24h"

# Database Configuration
DATABASE_POOL_SIZE=20
DATABASE_STATEMENT_TIMEOUT=30000

# Logging
LOG_LEVEL="debug"

# Redis (optional, for caching/sessions)
REDIS_URL="redis://localhost:6379"
