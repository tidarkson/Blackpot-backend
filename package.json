{
  "name": "blackpot-backend",
  "version": "1.0.0",
  "description": "Restaurant POS SaaS Backend",
  "main": "backend/src/index.ts",
  "prisma": {
    "schema": "database/prisma/schema.prisma",
    "seed": "ts-node database/seeds/seed.ts"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node backend/src/index.ts",
    "dev:no-watch": "ts-node backend/src/index.ts",
    "build": "tsc",
    "start": "node backend/dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "ts-node database/seeds/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "lint": "eslint backend/src --ext .ts",
    "lint:fix": "eslint backend/src --ext .ts --fix",
    "format": "prettier --write \"backend/src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "socket.io": "^4.8.3",
    "stripe": "^20.2.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.30",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "prisma": "^5.22.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
